---
import type { Props } from "./props";
import Arrow from "../icons/arrow.astro";

const { url, name, highlights, description } = Astro.props;
---

<div
  role="contentinfo"
  class="grid-span-1 ring-neutral-800 relative flex flex-col rounded-md bg-neutral-900/50 p-5 shadow-sm ring-1 hover:bg-neutral-800/50 duration-200"
>
  <div class="flex items-center justify-between space-x-[10px]">
    <div class="flex items-center gap-2">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-globe"
        ><circle cx="12" cy="12" r="10"></circle><path
          d="M12 2a14.5 14.5 0 0 0 0 20 14.5 14.5 0 0 0 0-20"></path><path
          d="M2 12h20"></path></svg
      >

      <div class="flex items-center gap-[6px]">
        <a
          class="hover:text-orange-600 group flex items-center gap-[6px] text-sm decoration-dotted underline-offset-[5px] hover:underline"
          href={url}
          title={`Ver ${name}`}
          target="_blank"
        >
          {name}
          <span
            class="text-orange-600 transition mb-1 ease-linear group-hover:-translate-y-0.5 group-hover:translate-x-0.5"
          >
            <Arrow />
          </span>
        </a>
      </div>
    </div>
  </div>

  <p class="py-3 text-xs text-skin-base">{description}</p>
  <ul class="mt-1 text-xs text-neutral-300 ml-[14px]">
    {
      highlights.map((highlight) => {
        return <li class="list-disc mb-2">{highlight}</li>;
      })
    }
  </ul>
</div>
