---
import Experience from "../components/experience/index.astro";
import Project from "../components/project/index.astro";
import Social from "../components/social/index.astro";
import { EXPERIENCE } from "../data/experience";
import { SOCIALS } from "../data/socials";
import { PROJECTS } from "../data/projects";
import Layout from "../layouts/Layout.astro";
import LocationIcon from "../components/icons/location.astro";
import "../styles/global.css";
import { SKILLS } from "../data/skills";
---

<Layout title="Hiten Khatri | Full Stack Engineer">
  <div class="relative hero z-10">
    <div
      class="mx-auto min-h-screen max-w-screen-2xl px-6 py-12 font-sans md:px-12 md:py-20 lg:px-16 lg:py-0"
    >
      <div class="lg:flex lg:justify-between lg:gap-4">
        <header
          class="lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:w-1/2 lg:flex-col lg:justify-between lg:py-12"
        >
          <!-- Hamburger Icon -->
          <div id="ham-icon" onclick="toggleMenu()">
            <svg
              class="menu-icon"
              xmlns="http://www.w3.org/2000/svg"
              x="0px"
              y="0px"
              width="512px"
              height="512px"
              viewBox="0 0 512 512"
              style="enable-background:new 0 0 512 512;"
              xml:space="preserve"
            >
              <title>Menu Icon</title>
              <g>
                <rect class="rect1" width="320" height="32"></rect>
                <rect class="rect2" width="320" height="32"></rect>
                <rect class="rect3" width="320" height="32"></rect>
              </g>
            </svg>
          </div>

          <div class="mob-1">
            <div
              class="flex lg:items-start gap-4 flex-col lg:flex-row items-center text-center lg:text-left"
            >
              <img
                src="/avatar.webp"
                alt="Hiten Khatri"
                class="w-40 h-[8.35rem] rounded-lg"
              />

              <div class="bottom-[7px] relative">
                <a
                  href="/"
                  class="text-4xl lg:text-5xl block font-bold tracking-tight bg-clip-text text-transparent bg-gradient-to-b from-neutral-50 to-neutral-400 bg-opacity-50"
                >
                  <h1 class="brand">Hiten Khatri</h1>
                </a>
                <h2
                  class="mt-2 text-sm lg:text-lg font-medium text-neutral-300"
                >
                  Experienced Full Stack Engineer
                </h2>

                <div id="desktop-contact">
                  <a
                    data-ccursor
                    href="mailto:hitenkhatri14@gmail.com"
                    class="contact-me inline-flex transition-all border-neutral-700 hover:border-opacity-0 border-opacity-50 shadow rounded-md border backdrop-blur-xl bg-neutral-400/10 px-3 py-2.5 items-center text-white font-semibold group p-2 text-sm gap-x-2 mt-4"
                    aria-label="Contact Me"
                  >
                    <span>Contact me</span>
                    <sapn
                      class="w-2 h-2 rounded-full bg-green-400 duration-1000 animate-pulse"
                    >
                    </sapn>
                  </a>

                  <div class="resume-section">
                    <a
                      data-ccursor
                      class="inline-flex items-center leading-tight text-neutral-200 font-semibold group p-2 rounded px-3"
                      aria-label="View Full Resume"
                      target="_blank"
                      rel="noreferrer noopener"
                      href="./Hiten_Khatri-CV.pdf"
                    >
                      <span>
                        <span
                          class="border-b border-transparent pb-px transition group-hover:border-neutral-300 motion-reduce:transition-none"
                        >
                          View Full
                        </span>

                        <span class="whitespace-nowrap">
                          <span
                            class="border-b border-transparent pb-px transition group-hover:border-neutral-300 motion-reduce:transition-none"
                          >
                            Resume
                          </span>

                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 20 20"
                            fill="currentColor"
                            class="ml-1 inline-block h-4 w-4 shrink-0 -translate-y-px transition-transform group-hover:translate-x-2 group-focus-visible:translate-x-2 motion-reduce:transition-none"
                            aria-hidden="true"
                            ><path
                              fill-rule="evenodd"
                              d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z"
                              clip-rule="evenodd"></path></svg
                          ></span
                        ></span
                      ></a
                    >
                  </div>
                </div>
              </div>
            </div>

            <div id="nav-links" class="mt-7 link_section">
              <ul>
                <li onclick="toggleMenu(true)">
                  <a
                    href="#about-me"
                    rel="noreferrer"
                    class="flex gap-1 items-center"
                  >
                    <LocationIcon />
                    <span
                      class="mt-0.5 tracking-tight bg-clip-text text-transparent bg-gradient-to-b from-neutral-50 to-neutral-200 bg-opacity-50 font-semibold"
                      >About Me</span
                    >
                  </a>
                </li>
                <li onclick="toggleMenu(true)">
                  <a
                    href="#work-experience"
                    rel="noreferrer"
                    class="flex gap-1 items-center"
                  >
                    <LocationIcon />
                    <span
                      class="mt-0.5 tracking-tight bg-clip-text text-transparent bg-gradient-to-b from-neutral-50 to-neutral-200 bg-opacity-50 font-semibold"
                      >Work Experience</span
                    >
                  </a>
                </li>
                <li onclick="toggleMenu(true)">
                  <a
                    href="#projects"
                    rel="noreferrer"
                    class="flex gap-1 items-center"
                  >
                    <LocationIcon />
                    <span
                      class="mt-0.5 tracking-tight bg-clip-text text-transparent bg-gradient-to-b from-neutral-50 to-neutral-200 bg-opacity-50 font-semibold"
                      >Projects</span
                    >
                  </a>
                </li>
                <li onclick="toggleMenu(true)">
                  <a
                    href="#skills"
                    rel="noreferrer"
                    class="flex gap-1 items-center"
                  >
                    <LocationIcon />
                    <span
                      class="mt-0.5 tracking-tight bg-clip-text text-transparent bg-gradient-to-b from-neutral-50 to-neutral-200 bg-opacity-50 font-semibold"
                      >Skills</span
                    >
                  </a>
                </li>
              </ul>
            </div>

            <div class="mt-12 resume-section">
              <a
                data-ccursor
                class="inline-flex items-center leading-tight text-neutral-200 font-semibold group p-2 rounded px-3"
                aria-label="View Full Resume"
                target="_blank"
                rel="noreferrer noopener"
                href="./Hiten_Khatri-CV.pdf"
              >
                <span>
                  <span
                    class="border-b border-transparent pb-px transition group-hover:border-neutral-300 motion-reduce:transition-none"
                  >
                    View Full
                  </span>

                  <span class="whitespace-nowrap">
                    <span
                      class="border-b border-transparent pb-px transition group-hover:border-neutral-300 motion-reduce:transition-none"
                    >
                      Resume
                    </span>

                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                      class="ml-1 inline-block h-4 w-4 shrink-0 -translate-y-px transition-transform group-hover:translate-x-2 group-focus-visible:translate-x-2 motion-reduce:transition-none"
                      aria-hidden="true"
                      ><path
                        fill-rule="evenodd"
                        d="M3 10a.75.75 0 01.75-.75h10.638L10.23 5.29a.75.75 0 111.04-1.08l5.5 5.25a.75.75 0 010 1.08l-5.5 5.25a.75.75 0 11-1.04-1.08l4.158-3.96H3.75A.75.75 0 013 10z"
                        clip-rule="evenodd"></path></svg
                    ></span
                  ></span
                ></a
              >
            </div>
          </div>

          <!-- Social Media -->
          <ul
            class="social-links mt-8 flex items-center justify-center lg:justify-normal gap-x-5"
            aria-label="Social media"
          >
            {SOCIALS.map((social) => <Social {...social} />)}
          </ul>
        </header>

        <main class="main-section pt-24 lg:w-1/2 lg:py-12">
          <!-- About Me -->
          <section
            id="about-me"
            class="mb-10 scroll-mt-16 md:mb-10 lg:mb-10 lg:scroll-mt-24"
            aria-label="About me"
          >
            <div class="custom_heading">
              <h3>About Me</h3>
            </div>

            <div class="mb-4 space-y-4 text-[16px]" style="line-height: 23px;">
              <p>
                I am a Full Stack Engineer with a strong expertise in the MERN
                stack (<a
                  href="https://www.mongodb.com/"
                  target="_blank"
                  rel="noreferrer"
                  class="text-orange-600 font-semibold">MongoDB</a
                >, <a
                  href="https://expressjs.com/"
                  target="_blank"
                  rel="noreferrer"
                  class="text-orange-600 font-semibold">Express.js</a
                >, <a
                  href="https://react.dev/"
                  target="_blank"
                  rel="noreferrer"
                  class="text-orange-600 font-semibold">React.js</a
                >, <a
                  href="https://nextjs.org/"
                  target="_blank"
                  rel="noreferrer"
                  class="text-orange-600 font-semibold">Next.js</a
                >, and <a
                  href="https://nodejs.org/en"
                  target="_blank"
                  rel="noreferrer"
                  class="text-orange-600 font-semibold">Node.js</a
                >). With a passion for building scalable and efficient web
                applications, I specialize in crafting seamless user experiences
                and backend systems. From designing intuitive front-end
                interfaces to implementing robust server-side logic, I thrive on
                delivering high-quality solutions that meet modern web
                standards.
              </p>

              <p>
                Looking forward to new challenges and exciting collaborations!
              </p>
            </div>
          </section>

          <!-- Work Experience -->
          <section
            id="work-experience"
            class="mb-10 scroll-mt-16 md:mb-24 lg:mb-10 lg:scroll-mt-24"
            aria-label="Work experience"
          >
            <div class="custom_heading custom_heading1">
              <h3>Work Experience</h3>
            </div>

            <div>
              <ol class="group/list space-y-6 lg:space-y-12">
                {EXPERIENCE.map((experience) => <Experience {...experience} />)}
              </ol>
            </div>
          </section>

          <!-- Projects -->
          <section id="projects" aria-label="Projects">
            <div class="custom_heading custom_heading1">
              <h3>Projects</h3>
            </div>

            <div
              class="grid grid-cols-1 gap-3 md:grid-cols-2 print:flex print:flex-col"
            >
              {PROJECTS.map((project) => <Project {...project} />)}
            </div>
          </section>

          <!-- Skills -->
          <section 
            id="skills" 
            class="mt-16 scroll-mt-16 md:mb-24 lg:mb-10 lg:scroll-mt-24" 
            aria-label="Skills"
          >
            <div class="custom_heading custom_heading1">
              <h3>Skills</h3>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div class="skill-category">
                <h4 class="text-orange-600 font-semibold mb-2">Frontend</h4>
                <div class="flex flex-wrap gap-2">
                  {SKILLS.frontend.map((skill) => (
                    <span class="skill-pill px-3 py-1.5 text-sm bg-neutral-900/50 border border-neutral-700/50 rounded-md hover:border-orange-600/50 transition-all duration-300 cursor-default relative overflow-hidden group">
                      <span class="relative z-10 text-sm">{skill}</span>
                      <div class="absolute inset-0 bg-gradient-to-r from-orange-600/10 to-orange-600/20 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
                    </span>
                  ))}
                </div>
              </div>

              <div class="skill-category">
                <h4 class="text-orange-600 font-semibold mb-2">Backend</h4>
                <div class="flex flex-wrap gap-2">
                  {SKILLS.backend.map((skill) => (
                    <span class="skill-pill px-3 py-1.5 text-sm bg-neutral-900/50 border border-neutral-700/50 rounded-md hover:border-orange-600/50 transition-all duration-300 cursor-default relative overflow-hidden group">
                      <span class="relative z-10">{skill}</span>
                      <div class="absolute inset-0 bg-gradient-to-r from-orange-600/10 to-orange-600/20 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
                    </span>
                  ))}
                </div>
              </div>

              <div class="skill-category">
                <h4 class="text-orange-600 font-semibold mb-2">Tools & DevOps</h4>
                <div class="flex flex-wrap gap-2">
                  {SKILLS.toolsAndDevOps.map((skill) => (
                    <span class="skill-pill px-3 py-1.5 text-sm bg-neutral-900/50 border border-neutral-700/50 rounded-md hover:border-orange-600/50 transition-all duration-300 cursor-default relative overflow-hidden group">
                      <span class="relative z-10">{skill}</span>
                      <div class="absolute inset-0 bg-gradient-to-r from-orange-600/10 to-orange-600/20 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
                    </span>
                  ))}
                </div>
              </div>

              <div class="skill-category">
                <h4 class="text-orange-600 font-semibold mb-2">Other</h4>
                <div class="flex flex-wrap gap-2">
                  {SKILLS.other.map((skill) => (
                    <span class="skill-pill px-3 py-1.5 text-sm bg-neutral-900/50 border border-neutral-700/50 rounded-md hover:border-orange-600/50 transition-all duration-300 cursor-default relative overflow-hidden group">
                      <span class="relative z-10">{skill}</span>
                      <div class="absolute inset-0 bg-gradient-to-r from-orange-600/10 to-orange-600/20 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </section>

          <footer class="footer max-w-md pb-16 mt-16 text-sm text-neutral-300 sm:pb-0">
            <p>
              If you can read this, I’ve probably fixed the bugs... or created
              new ones!
            </p>
          </footer>
        </main>
      </div>
    </div>
  </div>

  <footer class="text-center py-4 text-xs">
    {new Date().getFullYear()} All rights reserved.
  </footer>
</Layout>

<style scoped>
  @keyframes fadeIn {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  .hero {
    background-image: url(/pattern.svg);
    background-position: top center;
    background-repeat: no-repeat;
    overflow-y: visible;
    overflow-x: clip;
  }
</style>

<script defer is:inline>
  const toggleMenu = (flag) => {
    let b1 = document.querySelector(".menu-icon");
    let b2 = document.getElementById("nav-links");
    if (flag) {
      if (b1.classList.contains("active")) {
        b1.classList.toggle("active");
        b2.classList.toggle("active");
      }
    } else {
      b1.classList.toggle("active");
      b2.classList.toggle("active");
    }
  };
</script>
